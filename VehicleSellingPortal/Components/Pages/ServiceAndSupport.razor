@page "/support"

<h2 class="mb-4">Services & Support</h2>

<div class="row row-cols-1 row-cols-md-2 g-4">
    <div class="col">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Customer Support</h5>
                <p class="card-text">
                    Need help with buying, selling, or bidding? Our support team is here to assist you.
                </p>
                <p><strong>Email:</strong> support@vehiclesellingportal.com</p>
                <p><strong>Phone:</strong> +1 (800) 123-4567</p>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Technical Assistance</h5>
                <p class="card-text">
                    Facing issues with your account or the website? Reach out to our technical support team.
                </p>
                <p><strong>Email:</strong> techsupport@vehiclesellingportal.com</p>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">FAQs</h5>
                <p class="card-text">
                    Browse through frequently asked questions to find quick answers.
                </p>
                <NavLink class="btn btn-outline-primary" href="/faq">Go to FAQ</NavLink>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Live Chat</h5>
                <p class="card-text">
                    Chat with one of our support agents for real-time assistance.
                </p>
                <button class="btn btn-success" disabled>Chat Coming Soon</button>
            </div>
        </div>
    </div>
</div>
